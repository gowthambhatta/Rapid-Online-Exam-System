@model onllineexam.Models.DrpList
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Select Exam</h2>
<div class="col-md-6">
    @using (Html.BeginForm("Index", "ShowQuestion"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(m => m.QuestionNo, 1)
            <div class="form-group">
                @Html.Label("Exam Name", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.DropDownList("item1", ViewBag.name as SelectList, "Select Exam")*@
                    @Html.DropDownListFor(m => m.examid,new SelectList(Model.Examlist, "Test_id", "Test_name"), "Select Exam")
                    @Html.ValidationMessageFor(model => model.exam_title)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Start Exam" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
<div class="col-md-6">

    <h2 style="color: #00bfff"> <u>Rules</u></h2>

    <h3 style="color:#000000">
        <ul>
            <li>For each question you have only 1 minute.</li>
            <br>
            <li>If you want you can pass any any question</li>
            <br>
            <li>For each coorect anser you have 1 point</li>
        </ul>
    </h3>
</div>
<br>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

